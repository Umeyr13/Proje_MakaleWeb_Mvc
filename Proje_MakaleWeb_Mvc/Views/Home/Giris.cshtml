
@{
    ViewBag.Title = "Giris";
}

@using Makale_Entities.ViewModel

@model LoginModel

<link href="~/Content/login.css" rel="stylesheet" />
<link href="~/Content/validationCss.css" rel="stylesheet" />
@using (Html.BeginForm())
{ 
    <section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">login form </h1>
            </div>
            <div class="main-content">
                @Html.ValidationSummary(false) @*tepede hataların çıkması için*@
                <div class="input-group ">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>

                    @Html.TextBoxFor(x =>x.KullaniciAdi,new {@class="form-control",placeholder ="Kullanıcı Adı"} )
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                    
                    @Html.TextBoxFor(x=>x.Sifre,new {@class="form-control",placeholder ="Şifre",id="txtsifre"})
                </div>

                <div class="checkbox">
                    <label class="goster" >
                        <input name="goster" id="sifregoster"  type="checkbox"> Şifreyi Göster
                    </label>
                </div>

                <div class="form-group ">
                    <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş</button>
                </div>



            </div>
        </div>
    </div>
</section>

}

