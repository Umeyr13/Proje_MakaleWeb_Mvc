@using Makale_Entities
@{
    ViewBag.Title = "Index";
}
@model List<Makale>
<div class="container">

    <div class="row">

        <div class="col-md-3">
            @Html.Partial("_PartialPageKategoriler")

        </div>

        <div class="col-md-9">

            <div class="row carousel-holder">

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="slide-image" src="https://placehold.it/800x300" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="https://placehold.it/800x300" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="https://placehold.it/800x300" alt="">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>

            </div>

            <div class="row">

                @{
                    Random rnd = new Random();
                    int x = rnd.Next(200, 240);
                    string link = "https://picsum.photos/id" + x + "/200/300";
                }

                @foreach (var item in Model)
                {
                 
                    x = rnd.Next(200, 240);
                    link = "https://picsum.photos/id/" + x + "/200/300?random=1";
                    <div class=" col-sm-4 col-lg-4 col-md-4 " data-makaleid="@item.Id">

                        <div class="thumbnail-@item.Id">
                            <img src="@link" alt="">
                            <div class="caption">
                                <h4>
                                    <a href="#" data-toggle="modal" data-target="#modal_makale" data-makaleid="@item.Id">@item.Baslik</a>
                                </h4>
                                <h6 class="text-right">
                                    <span class="glyphicon glyphicon-user"></span>@item.Kullanici.KullaniciAdi
                                    <br />
                                    <span class="glyphicon glyphicon-time"></span>@item.DegistirmeTarihi.ToString("dd:MM:yy")
                                </h6>
                                @if (!string.IsNullOrEmpty(item.Icerik) && item.Icerik.Length > 60)
                                {
                                    <p>@item.Icerik.Substring(0, 60)...</p>
                                    <a href="#" class="btn btn-default btn-xs pull-right"data-toggle="modal" data-target="#modal_makale" data-makaleid="@item.Id">devamı<span class="glyphicon glyphicon-chevron-right"></span> </a>
                                }
                                else
                                {
                                    <p> @item.Icerik</p>
                                }

                            </div>

                            <div>
                                <hr />
                            </div>

                            <div class="form-group">

                                <p class="pull-right">
                                    <button class="btn btn-default btn-sm " data-toggle="modal" data-target="#modal1" data-makaleid="@item.Id"><span class="glyphicon glyphicon-comment"></span>Yorumlar</button>
                                </p>

                                <div class="ratings">
                                    @*  <button class="btn btn-default btn-sm begeni" id="begenilen" onclick="islemyap(this,'begen',@item.Id)"><span  *@
                                    <p>
                                        <button class="btn btn-default btn-sm begeni" id="begenilen" data-mid="@item.Id" data-like="false" onclick="islemyap(this,'begen',@item.Id)"><span class=" glyphicon glyphicon-heart-empty like-kalp-@item.Id"></span>   <span class="like-@item.Id">@item.BegeniSayisi</span> </button>
                                    </p>
                                </div>
                            </div>



                        </div>

                    </div>

                }
            </div>


        </div>

    </div>

</div>

@MyHelper.ModalPopup("modal1", "Yorumlar")

@MyHelper.ModalPopup("modal_makale", "Makale Detay")@* Makaaleye tıklayınca önizleme için*@ 
@section footer{
    @Html.Partial("_PartialPageFooter")

}
<script src="~/Scripts/CommentScript.js"></script>
<script src="~/Scripts/LikeScript.js"></script>

<script>

    var yakalananmakaleid = -1
    //makale detayı göster
    $(function () { //sayfa yüklendiğinde
        $('#modal_makale').on('show.bs.modal', function (e) {

            var yakalananbtn = $(e.relatedTarget);// O anda tıklanan butonnu yakaladık
            yakalananmakaleid = yakalananbtn.data("makaleid");
            $('#modal_makale_body').load("/Makale/MakaleGoster/" + yakalananmakaleid);

        });
    });

</script>
