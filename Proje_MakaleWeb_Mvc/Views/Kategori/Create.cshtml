@model Makale_Entities.Kategori

@{
    ViewBag.Title = "Yeni Kategori";
}
<link href="~/Content/validationCss.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row col-md-10 col-md-offset-1">
        <div class="form-horizontal">
            <h2>Yeni Kategori</h2>
            <hr />


            <div class="form-group">

                @Html.ValidationSummary(false)  @*En tepede çıksın diye false yaptık ve kendi yazdığımız css i verdik*@


                <div class="form-group">
                    <div class="row col-md-8 col-md-offset-2">

                        <div class="col-md-1">
                            @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label" })

                        </div>

                        <div class="col-md-11">

                            @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })

                        </div>


                    </div>


                </div>

                <div class="form-group">
                    <div class="row col-md-8 col-md-offset-2">
                        <div class="col-md-1">
                            @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label " })


                        </div>

                        <div class="col-md-11">

                            @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })

                        </div>


                    </div>

                </div>
                <div class="col-md-offset-2 col-md-10">

                    @Html.ActionLink("Kategoriler", "Index", null, new { @class = "btn btn-info" })
                    <input type="submit" value="Kaydet" class="btn btn-default" />
                </div>

            </div>
        </div>
     </div>
 }

