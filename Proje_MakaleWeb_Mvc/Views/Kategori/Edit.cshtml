@model Makale_Entities.Kategori

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/validationCss.css" rel="stylesheet" />
<div class="row col-md-10 col-md-offset-1">

    <h2>Kategori Düzenle</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
      
            <hr />
            @Html.ValidationSummary(false)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <div class="row col-md-8 col-md-offset-2">
                    <div class="col-md-1 ">
                        @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label" })                    
                    </div>
                    <div class="col-md-11 ">
                        @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div>
                </div>
            </div>

            <div class="form-group">
                <div class="row col-md-8 col-md-offset-2">
                    <div class="col-md-1">
                        @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label" })
                    </div> 

                    <div class="col-md-11">
                        @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Kategoriler", "Index", null, new { @class = "btn btn-info" })
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

</div>

