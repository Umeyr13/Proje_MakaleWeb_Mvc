@model Makale_Entities.Makale

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/validationCss.css" rel="stylesheet" />

<div class="col-md-10 col-md-offset-1">
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-8 col-md-offset-2">
            <div class="form-horizontal">
                <h2>Yeni Makale</h2>
                <hr />
                @Html.ValidationSummary(false)
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label" })

                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Icerik, htmlAttributes: new { @class = "control-label col-md-2" })

                    </div>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Icerik, 5, 50, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Taslak, htmlAttributes: new { @class = "control-label" })

                    </div>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Taslak)

                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Kategori.Id, "Kategori", htmlAttributes: new { @class = "control-label" })

                    </div>
                    <div class="col-md-10 " >
                        @*@Html.DropDownList("KategoriListesi", null, new { @class = "control-label "})*@
                       
                         @Html.DropDownListFor(model => model.Kategori.Id,(SelectList) ViewBag.KategoriListesi,new {@class="form-control"} )
                      
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success" />
                        @Html.ActionLink("Makaleler", "Index",null, new {@class="btn btn-info"})
                    </div>
                </div>
            </div>


        </div>
    }

</div>
